<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.StatsMonthFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/happinessContainer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_fragment"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/happiness"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <!-- Per ciascuna TextView relaiva alle statistiche non è necessario
        inserire un android:text perché viene inserito dinamicamente dal fragment -->

        <TextView
            android:id="@+id/happinessTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_fragment"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:padding="20dp"
            android:elegantTextHeight="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sadnessContainer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_fragment"
        android:layout_marginTop="@dimen/margin"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sadness"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/neutralityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_fragment"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:padding="20dp"
            android:elegantTextHeight="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/neutralContainer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_fragment"
        android:layout_marginTop="@dimen/margin"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/neutral"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/sadnessTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_fragment"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:padding="20dp"
            android:elegantTextHeight="true"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>